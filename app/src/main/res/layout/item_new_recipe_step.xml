<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_new_recipe_step_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@color/white"
        android:background="@drawable/custom_text_view_circle"
        android:gravity="center"/>

    <EditText
        android:id="@+id/et_new_recipe_step_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Trộn bột và nước đến khi đặc lại"
        android:padding="10dp"
        android:background="@drawable/custom_edit_text_new_recipe"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="20dp"/>
</LinearLayout>