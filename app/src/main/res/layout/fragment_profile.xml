<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ProfileFragment"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/gradient_background">

    <EditText
        android:id="@+id/et_profile_username"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:hint="Username"
        android:textSize="20sp"
        android:background="@drawable/custom_edit_text_login_logout"
        android:layout_marginVertical="10dp"
        android:paddingHorizontal="16dp"/>

    <EditText
        android:id="@+id/et_profile_fullName"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:hint="Full name"
        android:textSize="20sp"
        android:background="@drawable/custom_edit_text_login_logout"
        android:layout_marginVertical="10dp"
        android:paddingHorizontal="16dp"/>

    <EditText
        android:id="@+id/et_profile_address"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:hint="Address"
        android:textSize="20sp"
        android:background="@drawable/custom_edit_text_login_logout"
        android:layout_marginVertical="10dp"
        android:paddingHorizontal="16dp"/>

    <EditText
        android:id="@+id/et_profile_phone"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:hint="Phone"
        android:textSize="20sp"
        android:background="@drawable/custom_edit_text_login_logout"
        android:layout_marginVertical="10dp"
        android:paddingHorizontal="16dp"/>

    <EditText
        android:id="@+id/et_profile_email"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:hint="Email"
        android:textSize="20sp"
        android:background="@drawable/custom_edit_text_login_logout"
        android:layout_marginVertical="10dp"
        android:paddingHorizontal="16dp"/>

    <EditText
        android:id="@+id/et_profile_detail"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:hint="Detail"
        android:textSize="20sp"
        android:background="@drawable/custom_edit_text_login_logout"
        android:layout_marginVertical="10dp"
        android:paddingHorizontal="16dp"/>
</LinearLayout>